<div class="container mt-3">
  <h1>Add your favorite cocktail🍹</h1>
  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name %>
    <%= f.button :submit, class: "btn btn-success" %>
  <% end %>
  <div class="mt-3">
    <%= link_to 'cancel', cocktails_path, class: "btn btn-light"  %>
  </div>
</div>
