<div class="container mt-3">
  <h1>The recipes of <%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <p>Ingredients: <%= dose.ingredient.name %></p>
    <p>Amount: <%= dose.description %></p>
    <%= link_to dose_path(dose), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} do %>
      <i class="fa-solid fa-trash"></i>
    <% end %>
  <% end %>
  <div class="mt-3">
    <%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
  </div>
  <div class="mt-3">
    <%= link_to 'home', cocktails_path, class: "btn btn-light"  %>
  </div>
</div>
